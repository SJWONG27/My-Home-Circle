<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ProfileFragment"
    >


    <ImageView
        android:id="@+id/IVProfile1"
        android:layout_width="87dp"
        android:layout_height="76dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/icon_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text=""
        android:textColor="#224AA1"
        app:layout_constraintStart_toEndOf="@+id/IVProfile1"
        app:layout_constraintTop_toBottomOf="@+id/TVProfileUsername" />

    <TextView
        android:id="@+id/TVProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text=""
        android:textColor="#224AA1"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/IVProfile1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnLogOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#224AA1"
        android:fontFamily="@font/poppins_medium"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BtnChgPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.07"
        android:textSize="15sp"
        android:backgroundTint="#224AA1"
        android:fontFamily="@font/poppins_medium"
        android:text="Change Password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/BtnLogOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>