<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luke_chesser_3rwagdkbf7u_unsplash"
    tools:context=".LoginPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginconstraintLayout"
        android:layout_width="342dp"
        android:layout_height="565dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/ETLoginEmailAddress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="184dp"
            android:background="@drawable/edit_text_design"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.1"
            android:ems="15"
            android:hint="example@gmail.com"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ETLoginPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/edit_text_design"
            android:ems="15"
            android:fontFamily="@font/poppins_medium"
            android:hint="********"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ETLoginEmailAddress" />

        <Button
            android:id="@+id/BtnLoginSignIn"
            style="@style/Button.Green"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#224AA1"
            android:text="Sign In"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ETLoginPassword" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="241dp"

            android:layout_marginBottom="-20dp"
            app:layout_constraintBottom_toTopOf="@+id/ETLoginEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo_myhome" />

        <Button
            android:id="@+id/BtnChangePassword"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:background=" #00000000"
            android:fontFamily="@font/poppins_medium"
            android:text="Forgot Password?"
            android:textAlignment="textStart"
            android:textColorLink="#FFF"
            app:layout_constraintTop_toTopOf="@id/BtnLoginSignIn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/BtnLoginRegisterNow"
            android:layout_width="273dp"
            android:layout_height="62dp"
            android:layout_marginBottom="1dp"
            android:background=" #00000000"
            android:fontFamily="@font/poppins_medium"
            android:text="Don't have an account?\nRegister Now"
            android:textColor="@color/black"
            android:textColorLink="#F8F8F8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Email"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/ETLoginEmailAddress"
            app:layout_constraintStart_toStartOf="@id/ETLoginEmailAddress" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Password"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintBottom_toTopOf="@+id/ETLoginPassword"
            app:layout_constraintStart_toStartOf="@id/ETLoginPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>